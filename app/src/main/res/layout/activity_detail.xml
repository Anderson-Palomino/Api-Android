<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/black"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:maxWidth="600dp">

        <!-- Nombre del alumno -->
        <TextView
            android:id="@+id/txtAlumno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Anderson Palomino"
            android:gravity="end"
            android:textColor="#D50000"
            android:textStyle="bold"
            android:textSize="16sp" />

        <!-- IDMEAL -->
        <TextView
            android:text="IDMEAL"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_marginTop="12dp"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtIdMeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white" />

        <!-- STRMEAL -->
        <TextView
            android:text="STRMEAL"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_marginTop="12dp"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white" />

        <!-- STRCATEGORY -->
        <TextView
            android:text="STRCATEGORY"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_marginTop="12dp"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtCategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white" />

        <!-- STRAREA -->
        <TextView
            android:text="STRAREA"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_marginTop="12dp"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white" />

        <!-- STRYOUTUBE -->
        <TextView
            android:text="STRYOUTUBE"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_marginTop="12dp"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtYoutube"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_blue_light"
            android:autoLink="web"
            android:textSize="14sp" />

        <!-- Imagen -->
        <ImageView
            android:id="@+id/imgDetalle"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />

        <!-- BotÃ³n volver -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVolver"
            android:text="VOLVER"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_purple"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
